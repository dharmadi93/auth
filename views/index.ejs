<!DOCTYPE html>
<html>

  <% include head.ejs %>

  <body>

  <% include top_nav.ejs %>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="text-center">Welcome</h1>

        <% if (typeof (user) != "undefined") { %>
          <table class="table">
            <tr>
              <td>No.</td>
              <td>Name</td>
              <td>Username</td>
              <td>Email</td>
              <td>Role</td>
              <td>CreatedAt</td>
              <td>UpdatedAt</td>
              <% if (user.role == "admin") { %>
              <td>Action</td>
              <% } %>
            </tr>

            <% for (var i = 0; i < list.length; i++) {%>
            <tr>
              <td><%= i+1%></td>
              <td><%= list[i].name%></td>
              <td><%= list[i].username%></td>
              <td><%= list[i].email%></td>
              <td><%= list[i].role%></td>
              <td><%= list[i].createdAt%></td>
              <td><%= list[i].updatedAt%></td>
              <% if (user.role == "admin") { %>
              <td>
                <span class="pull-right">
                  <a href="/edit/<%= list[i].id%>" class="btn btn-warning">Edit</a>
                  <a href="/delete/<%= list[i].id%>" class="btn btn-danger">Delete</a>
                </span>
              </td>
              <% } %>
            </tr>
            <% } %>
          </table>
        <% } %>

      </div>
    </div>
  </div>

  <% include scripts.ejs %>
  </body>
</html>
